      a.hatena-bookmark-button[href="http://b.hatena.ne.jp/entry/i-have-friends.yuyat.jp#{current_article.url}" data-hatena-bookmark-title=current_page.data.title data-hatena-bookmark-layout="standard-balloon" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加"]
